<% layout("/layouts/boilerplate") %>

    <div class="row mt-4">
        <h2 class="col-8 offset-3">Login For Wanderlust</h2>
        <div class="col-8 offset-3">
            <form action="/login" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" id="username" class="form-control" required />

                    <div class="valid-feedback">Looks good !</div>


                </div>


                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" required />

                    <div class="valid-feedback">Title looks good</div>


                </div>


                <div style="display: flex; align-items: center; justify-content: space-between;">
                    <button class="btn-gradient">Login</button>
                    <a class="text-decoration-none text-light" href="/signup">
                        <b style="color: orange;">Don't Have An Account?</b>
                    </a>
                </div>
            </form>

        </div>
    </div>